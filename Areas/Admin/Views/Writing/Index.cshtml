@model IEnumerable<Entities.Models.Writing>

<div class="text-center container">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i> Create
        </a>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Entities.Models.Writing wrt in Model)
            {
                <tr>
                    <td>@wrt.WritingId</td>
                    <td>@wrt.WritingName</td>
                    <td>@wrt.WritingDescription</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@wrt.WritingId"><i class="fa fa-pen"></i> Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@wrt.WritingId"><i class="fa fa-trash"></i> Delete</a>
                            <a class="btn btn-info" asp-area="" asp-action="Get" asp-controller="Blog" target="_blank" asp-route-id="@wrt.WritingId"><i class="fa fa-search"></i> İncele</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>